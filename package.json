{
  "name": "@maxmilton/test-utils",
  "version": "0.0.8",
  "description": "Test utilities with support for Bun, CSS, stage1, and more",
  "repository": "maxmilton/test-utils",
  "homepage": "https://github.com/maxmilton/test-utils",
  "author": "Max Milton <max@happyhackers.xyz>",
  "license": "MIT",
  "type": "module",
  "exports": {
    "./css": {
      "types": "./dist/index.d.ts",
      "bun": "./src/css.ts",
      "default": "./dist/css.js"
    },
    "./dom": {
      "types": "./dist/dom.d.ts",
      "bun": "./src/dom.ts",
      "default": "./dist/dom.js"
    },
    "./extend": {
      "types": "./dist/index.d.ts",
      "bun": "./src/extend.ts",
      "default": "./dist/extend.js"
    },
    "./html": {
      "types": "./dist/index.d.ts",
      "bun": "./src/html.ts",
      "default": "./dist/html.js"
    },
    "./spy": {
      "types": "./dist/index.d.ts",
      "bun": "./src/spy.ts",
      "default": "./dist/spy.js"
    },
    "./dist/*": "./dist/*",
    "./package.json": "./package.json"
  },
  "files": ["dist", "src"],
  "scripts": {
    "build": "bun build.ts",
    "postbuild": "tsc --project ./tsconfig.dts.json",
    "lint": "bun lint:fmt && bun lint:js && bun lint:ts",
    "lint:fmt": "biome check",
    "lint:js": "eslint",
    "lint:ts": "tsc --noEmit",
    "test": "bun test"
  },
  "peerDependencies": {
    "happy-dom": "^14.0.0 || ^15.0.0 || ^16.0.0 || ^17.0.0"
  },
  "peerDependenciesMeta": {
    "happy-dom": {
      "optional": true
    }
  },
  "dependencies": {
    "@maxmilton/html-parser": "^0.0.11",
    "@types/stylis": "^4.2.7",
    "stylis": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@eslint/js": "9.20.0",
    "@maxmilton/eslint-config": "0.0.8",
    "@types/bun": "1.2.8",
    "eslint": "9.20.0",
    "eslint-plugin-unicorn": "56.0.1",
    "happy-dom": "17.0.2",
    "stage1": "0.8.0-next.16",
    "typescript": "5.7.3",
    "typescript-eslint": "8.23.0"
  }
}
