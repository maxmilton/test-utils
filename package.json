{
  "name": "@maxmilton/test-utils",
  "version": "0.0.14",
  "description": "Test utilities with support for Bun, CSS, stage1, and more",
  "repository": "github:maxmilton/test-utils",
  "bugs": "https://github.com/maxmilton/test-utils/issues",
  "author": "Max Milton <max@2okki.com>",
  "license": "MIT",
  "type": "module",
  "exports": {
    "./css": {
      "types": "./dist/css.d.ts",
      "bun": "./src/css.ts",
      "default": "./dist/css.js"
    },
    "./dom": {
      "types": "./dist/dom.d.ts",
      "bun": "./src/dom.ts",
      "default": "./dist/dom.js"
    },
    "./extend": {
      "types": "./dist/extend.d.ts",
      "bun": "./src/extend.ts",
      "default": "./dist/extend.js"
    },
    "./html": {
      "types": "./dist/html.d.ts",
      "bun": "./src/html.ts",
      "default": "./dist/html.js"
    },
    "./spy": {
      "types": "./dist/spy.d.ts",
      "bun": "./src/spy.ts",
      "default": "./dist/spy.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "bun build.ts",
    "lint": "bun lint:fmt && bun lint:js && bun lint:ts",
    "lint:fmt": "biome check",
    "lint:js": "eslint",
    "lint:ts": "tsc --noEmit",
    "test": "bun test --only-failures",
    "test:ci": "bun test --coverage --random --rerun-each=3"
  },
  "peerDependencies": {
    "happy-dom": ">=14.0.0 <21.0.0"
  },
  "peerDependenciesMeta": {
    "happy-dom": {
      "optional": true
    }
  },
  "dependencies": {
    "@maxmilton/html-parser": "^0.0.12",
    "@types/stylis": "^4.2.7",
    "stylis": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@eslint/js": "9.39.2",
    "@maxmilton/eslint-config": "0.3.0",
    "@types/bun": "1.3.8",
    "eslint": "9.39.2",
    "eslint-plugin-unicorn": "62.0.0",
    "happy-dom": "20.0.11",
    "stage1": "0.10.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.48.1"
  }
}
